{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json", 
  "__commment__": "Modified from 13_pie; this version only shows one pie but maintains the small mult infrastructure",
  "config":{"background":"#ffffff"},
  "autosize": "pad",
  "signals": [{"name": "radius","value": 80}],
  "data": [
    {
      "name": "table",
      "url": "data/complaints.csv",
      "format": {"type": "csv","parse": "auto"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Company response to consumer"],
          "fields": ["Company response to consumer"],
          "ops": ["count"],
          "as": ["count"]
        },
        {
          "type": "collect",
          "sort": {"field": "sum","order": "ascending"}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "Company response to consumer",
        "sort": {"op": "sum","field": "count","order": "descending"}
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "orient": "right",
      "title": "Company response to consumer"
    }
  ],
  "layout": {"padding": {"row": 20,"column": 20},"columns": 2},
  "marks": [
    {
      "name": "product-group",
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "responses",
          "groupby": "Product"
        }
      },
      "data": [
        {
          "name": "pied",
          "source": "responses",
          "transform": [{"type": "pie","field": "count","sort": false}]
        }
      ],
      "marks": [
        {
          "type": "text",
          "encode": {
            "enter": {
              "text": {"field": {"parent": "Product"}},
              "align": {"value": "center"}
            }
          }
        },
        {
          "type": "arc",
          "from": {"data": "pied"},
          "encode": {
            "enter": {
              "y": {"signal": "radius + 10"},
              "startAngle": {"field": "startAngle"},
              "endAngle": {"field": "endAngle"},
              "innerRadius": {"value": 40},
              "outerRadius": {"signal": "radius"},
              "stroke": {"value": "#fff"},
              "fill": {
                "field": "Company response to consumer",
                "scale": "color"
              }
            }
          }
        }
      ]
    }
  ]
}