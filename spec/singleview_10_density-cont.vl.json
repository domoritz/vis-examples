{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": { "url": "data/cars.csv" },
  "mark": "rect",
  "encoding": {
    "y": {"field": "curb-weight", "bin": true, "type": "quantitative", "title": "Curb Weight"},
    "x": {"field": "city-mpg", "bin": true, "type": "quantitative", "title": "City MPG"},
    "color": {"aggregate": "count", "field": "*", "type": "quantitative"}
  },
  "config": {
    "range": {
      "heatmap": {
        "scheme": "greenblue"
      }
    }
  }
}
