{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 600,
  "height": 500,
  "padding": 5,
  "signals": [
    {
      "name": "layout",
      "value": "squarify",
      "bind": {
        "input": "select",
        "options": ["squarify","binary","slicedice"]
      }
    },
    {
      "name": "aspectRatio",
      "value": 1.6,
      "bind": {"input": "range","min": 0.2,"max": 5,"step": 0.1}
    }
  ],
  "data": [
    {
      "name": "tree",
      "url": "data/complaints.csv",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "formula",
          "as": "relief",
          "expr": "indexof(datum['Company response to consumer'], 'relief') >= 0 ? 1 : 0"
        },
        {
          "type": "aggregate",
          "groupby": ["Product","Sub-product"],
          "fields": ["relief","relief"],
          "ops": ["sum","count"]
        },
        {
          "type": "formula",
          "as": "ratio",
          "expr": "datum.sum_relief / datum.count_relief"
        },
        {
          "type": "nest",
          "key": "id",
          "keys": ["Product","Sub-product"]
        },
        {
          "type": "treemap",
          "field": "count_relief",
          "sort": {"field": "Product"},
          "round": true,
          "method": {"signal": "layout"},
          "ratio": {"signal": "aspectRatio"},
          "size": [{"signal": "width"}, {"signal": "height"}]
        }
      ]
    },
    {
      "name": "nodes",
      "source": "tree",
      "transform": [{"type": "filter","expr": "datum.children"}]
    },
    {
      "name": "leaves",
      "source": "tree",
      "transform": [{"type": "filter","expr": "!datum.children"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "tree", "field": "Product"},
      "range": {"scheme": "category10"}
    },
    {
      "name": "size",
      "type": "ordinal",
      "domain": [0,1,2,3],
      "range": [256,28,20,14]
    }
  ],
  "legends": [{
    "fill": "color",
    "orient": "right",
    "title": "Product"
  }],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "stroke": {"value": "#fff"}
        },
        "update": {
          "x": {"field": "x0"},
          "y": {"field": "y0"},
          "x2": {"field": "x1"},
          "y2": {"field": "y1"},
          "fill": {"scale": "color","field": "Product"}
        },
        "hover": {"fill": {"value": "red"}}
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "interactive": false,
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fill": {"value": "#000"},
          "text": {"signal": "datum['Sub-product'] || 'other'"},
          "fontSize": {"scale": "size","field": "depth"}
        },
        "update": {
          "x": {"signal": "0.5 * (datum.x0 + datum.x1)"},
          "y": {"signal": "0.5 * (datum.y0 + datum.y1)"}
        }
      }
    }
  ]
}