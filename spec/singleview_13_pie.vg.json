{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "signals": [
    {"name": "radius","value": 150},
    {"name": "offset", "value": 15},
    {"name": "width", "update": "5 * (offset + 2*radius)"}
  ],
  "data": [
    {
      "name": "table",
      "url": "data/complaints.csv",
      "format": {"type": "csv","parse": "auto"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Company response to consumer", "Product"],
          "fields": ["Company response to consumer"],
          "ops": ["count"],
          "as": ["count"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "gscale",
      "type": "band",
      "range": [0, {"signal": "width"}],
      "round": true,
      "domain": {
        "data": "table",
        "field": "Product"
      }
    }
  ],
  "marks": [
    {
      "name": "product-group",
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "responses",
          "groupby": "Product"
        }
      },
      "data": [
        {
          "name": "pied",
          "source": "responses",
          "transforms": [
            {"type": "pie","field": "count"}
          ]
        }
      ],
      "encode": {
        "enter": {
          "x": {"scale": "gscale", "field": "Product", "offset": {"signal": "offset"}}
        }
      },
      "marks": [
        {
          "type": "arc",
          "from": {"data": "pied"},
          "encode": {
            "enter": {
              "x": {"field": {"group": "width"},"mult": 0.5},
              "y": {"field": {"group": "height"},"mult": 0.5},
              "startAngle": {"field": "startAngle"},
              "endAngle": {"field": "endAngle"},
              "innerRadius": {"value": 20},
              "outerRadius": {"signal": "radius"},
              "stroke": {"value": "#fff"}
            },
            "update": {"fill": {"value": "#ccc"}},
            "hover": {"fill": {"value": "pink"}}
          }
        },
        {
          "type": "text",
          "from": {"data": "table"},
          "encode": {
            "enter": {
              "x": {"field": {"group": "width"},"mult": 0.5},
              "y": {"field": {"group": "height"},"mult": 0.5},
              "radius": {"signal": "radius","offset": 8},
              "theta": {
                "signal": "(datum.startAngle + datum.endAngle)/2"
              },
              "fill": {"value": "#000"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "text": {"field": "Company response to consumer"}
            }
          }
        }
      ]
    }
  ]
}