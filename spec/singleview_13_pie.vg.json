{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "signals": [
    {"name": "radius","value": 80},
    {"name": "height","update": "6 * 2*radius"}
  ],
  "data": [
    {
      "name": "table",
      "url": "data/complaints.csv",
      "format": {"type": "csv","parse": "auto"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Company response to consumer","Product"],
          "fields": ["Company response to consumer"],
          "ops": ["count"],
          "as": ["count"]
        },
        {
          "type": "collect",
          "sort": {
            "field": "sum",
            "order": "ascending"
          }
        }
      ]
    },
    {
      "name": "products",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Product"],
          "fields": ["Company response to consumer"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "gscale",
      "type": "band",
      "range": [0,{"signal": "height"}],
      "domain": {"data": "table","field": "Product"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {
        "data": "table",
        "field": "Company response to consumer",
        "sort": {"op": "sum", "field": "count", "order": "descending"}
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "orient": "none",
      "title": "Company response to consumer",
      "encode": {
        "legend": {
          "update": {
            "x": {"signal": "radius + 30"}
          }
        }
      }
    }
  ],
  "marks": [
    {
      "type": "text",
      "from": {"data": "products"},
      "encode": {
        "enter": {
          "text": {"field": "Product"},
          "y": {
            "scale": "gscale",
            "field": "Product",
            "offset": "-10"
          },
          "align": {
            "value": "center"
          }
        }
      }
    },
    {
      "name": "product-group",
      "type": "group",
      "from": {
        "facet": {
          "data": "table",
          "name": "responses",
          "groupby": "Product"
        }
      },
      "data": [
        {
          "name": "pied",
          "source": "responses",
          "transform": [{"type": "pie", "field": "count", "sort":false}]
        }
      ],
      "encode": {
        "enter": {
          "y": {
            "scale": "gscale",
            "field": "Product",
            "offset": {"signal": "radius"}
          }
        }
      },
      "marks": [
        {
          "type": "arc",
          "from": {"data": "pied"},
          "encode": {
            "enter": {
              "x": {"field": {"group": "width"},"mult": 0.5},
              "y": {"field": {"group": "height"},"mult": 0.5},
              "startAngle": {"field": "startAngle"},
              "endAngle": {"field": "endAngle"},
              "innerRadius": {"value": 20},
              "outerRadius": {"signal": "radius"},
              "stroke": {"value": "#fff"},
              "fill": {
                "field": "Company response to consumer",
                "scale": "color"
              }
            }
          }
        }
      ]
    }
  ]
}